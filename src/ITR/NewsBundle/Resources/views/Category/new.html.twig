{% extends "NewsBundle:Admin:layout.html.twig" %}

{% form_theme form 'NewsBundle:Form:fields.html.twig' %}

{% block content -%}
    {{parent()}}
    <h1>Category creation</h1>
    <a href="{{ path('category') }}"  class="btn btn-default">{% trans %}Back to the list{% endtrans %}</a> 
    <div class="row" >
        <div class="col-md-5 col-md-offset-4">
            {{ form_start(form)}}
            {{ form_errors(form) }}
            {{ form_row(form.category_name) }}
            {{ form_widget(form.submit) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
