{% extends "NewsBundle:Admin:layout.html.twig" %}

{% block content -%}
    {{parent()}}
    <h1>User</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>User_name</th>
                <td>{{ entity.username }}</td>
            </tr>
            <tr>
                <th>User_email</th>
                <td>{{ entity.useremail }}</td>
            </tr>
            <tr>
                <th>User_password</th>
                <td>{{ entity.userpassword }}</td>
            </tr>
            <tr>
                <th>User_role</th>
                <td>{{ entity.userrole }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('user') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('user_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
