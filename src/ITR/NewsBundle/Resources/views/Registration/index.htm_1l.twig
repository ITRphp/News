{% extends "NewsBundle::layout.html.twig" %}

{% block title %}{% trans %}Registration{% endtrans %}{% endblock %}
{% block form_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
        <ul class="error_list">
            {% for error in errors %}
                <li>{{ error.messageTemplate|trans(error.messageParameters, 'validators') }}</li>
            {% endfor %}
        </ul>
    {% endif %}
{% endspaceless %}
{% endblock form_errors %}

{% block content %}
   
    <script src="{{ asset('public/js/repeatPassword.js') }}" type="text/javascript"></script>
    <div class="container">
        <form method="POST" action="{{ path('_registration') }}" accept-charset="UTF-8" class="form-signin">
            <div class="control-group">
                <label for="username">{% trans %}Username{% endtrans %}</label>
                <div class="controls">
                    <input type="text" id="username" class="span4" name="username" placeholder="Username" required pattern="^[a-zA-Z0-9_]+$">
                </div>
            </div>
            <div class="control-group">                
                <label for="email">{% trans %}Email:{% endtrans %}</label>
                <div class="controls">
                    <input type="email" id="email" name="_username" placeholder="email@example.com" required />
                </div>
            </div> 
            <div class="control-group">
                <label for="password">{% trans %}Password{% endtrans %}</label>
                <div class="controls">
                    <input type="password" id="password1" class="span4" name="password" placeholder="Password">
                </div>
            </div>
            <div class="control-group">
                <label for="password2">{% trans %}Repeat password{% endtrans %}</label>
                <div class="controls">
                    <input type="password" id="password2" name="_password" placeholder="Repeat password" />
                </div>
            </div>
            <button type="submit" name="submit" class="btn btn-info btn-block">{% trans %}Registration{% endtrans %}</button>
	</form>    
    </div>
	
{% endblock %}
