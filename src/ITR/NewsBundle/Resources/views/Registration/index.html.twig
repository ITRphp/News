{% extends "NewsBundle::layout.html.twig" %}

{% block title %}{% trans %}Registration{% endtrans %}{% endblock %}

{% block content %}
    <div class="container">
        <form method="POST" action="" accept-charset="UTF-8" class="form-signin">
            <div class="control-group">
                <label for="username">{% trans %}User name{% endtrans %}</label>
                <div class="controls">
                    <input type="text" id="username" class="span4" name="username" placeholder="Username">
                </div>
            </div>
            <div class="control-group">
                <label for="email">{% trans %}Email:{% endtrans %}</label>
                <div class="controls">
                    <input type="email" id="email" name="_username" placeholder="email@example.com"/>
                </div>
            </div> 
            <div class="control-group">
                <label for="password">{% trans %}Password{% endtrans %}</label>
                <div class="controls">
                    <input type="password" id="password" class="span4" name="password" placeholder="Password">
                </div>
            </div>
            <div class="control-group">
                <label for="password2">{% trans %}Repeat password{% endtrans %}</label>
                <div class="controls">
                    <input type="password" id="password2" name="_password" placeholder="Password" />
                </div>
            </div>
            <button type="submit" name="submit" class="btn btn-info btn-block">{% trans %}Registration{% endtrans %}</button>
	</form>    
    </div>
	
{% endblock %}
