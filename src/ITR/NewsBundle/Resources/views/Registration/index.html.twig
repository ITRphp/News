{% extends "NewsBundle::layout.html.twig" %}

{% form_theme form 'NewsBundle:Form:fields.html.twig' %}

{% block title %}{% trans %}Registration{% endtrans %}{% endblock %}
{% block content %}   
    <script src="{{ asset('public/js/repeatPassword.js') }}" type="text/javascript"></script>
    
    <div class="container">        
        <form action="{{ path('_registration') }}" method="post" {{ form_enctype(form) }} class="form-signin">
            <div class="control-group">
                {{form_label(form.user_name, "Username", {'attr':{'class': 'label' }} )}}
                <div class="controls">
                    {{form_widget(form.user_name,{'attr':{'pattern': '^[a-zA-Z0-9_]+$','placeholder': 'Your name' }} )}}
                </div>
            </div>
                <p></p>
            <div class="control-group">
                {{form_label(form.user_email, "Email", {'attr':{'class': 'label' }} )}}
                <div class="controls">
                    {{form_widget(form.user_email,{'attr':{'placeholder': 'example@example.com' }} )}}
                </div>
            </div>
                <p></p>
            <div class="control-group">
                {{form_label(form.user_password, null, {'label': 'Password', 'attr':{'class': 'label' }} )}}
                <div class="controls">
                    {{form_widget(form.user_password,{'attr':{'placeholder': 'Password', 'class':'password1' }} )}}
                </div>
            </div>                
            <div class="control-group">
                <label for="password2">{% trans %}Repeat password{% endtrans %}</label>
                <div class="controls">
                     <input type="password" id="password2" name="_password" placeholder="Repeat password" />
                </div>
            </div>
                {{ form_errors(form) }}
                {{ form_rest(form) }}
            <input type="submit" class="btn btn-success" value="{% trans %}Registration{% endtrans %}"/>
        </form>   
    </div>
	
{% endblock %}
