<!DOCTYPE html>
<html> 
    <head>
       <title>{% block title %}{% trans %}News{% endtrans %}{% endblock %}</title>

       
       {% block head %}
           <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
           {% block stylesheets %}
               {% stylesheets '@NewsBundle/Resources/public/css/*' filter='cssrewrite' %}
               <link rel="stylesheet" href="{{ asset_url }}" />
           {% endstylesheets %}           
           {% endblock %}
           
            {% javascripts
                    '@NewsBundle/Resources/public/js/jquery-1.11.1.js'
                    '@NewsBundle/Resources/public/js/bootstrap.min.js'%}
                    <script src="{{ asset_url }}"></script>
                    {% endjavascripts %}

        {% endblock %}
    </head>
    <body>
            {% block body %}
                <div id="logo" class="col-md" style="padding:5px">
                    {% image '@NewsBundle/Resources/public/images/logo.png'%}
                       <img src="{{ asset_url }}"  alt="Example"/>
                    {% endimage %}
                <font size="13">Modern media portal</font>
                <hr>
                </div>
                {% for flashMessage in app.session.flashbag.get('notice') %}
                    <div class="alert alert-warning alert-dismissable text-center">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <strong>{{ flashMessage }}</strong> 
                    </div>
                {% endfor %}
                {% block content %}{% endblock %}
            {% endblock %}
    </body>
</html>
