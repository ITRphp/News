{% extends "CatalogBundle:Catalog:layout.html.twig" %}

{% block goods %}
    <div class="col-md-10" id="goods_list">
        <table class="records_list table table-hover table-bordered">
            <thead>
            <tr>
                <th>{{'Type'|trans}}</th>
                <th>{{'Scaner'|trans}}</th>
                <th>{{'Fax'|trans}}</th>
                <th>{{'Print Type'|trans}}</th>

            </tr>
            </thead>
            <tbody>
            {% for goods_property in property %}
                <tr>
                    <td>{{ goods_property.type }}</td>
                    <td>
                        {% if goods_property.fax %}
                            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                        {% else %}
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        {% endif %}
                    </td>
                    <td>
                        {% if goods_property.fax %}
                            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                        {% else %}
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        {% endif %}
                    </td>
                    <td>{{ goods_property.printType }}</td>
                </tr>
            {% else %}
                <h3>No such goods</h3>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {#<div class="navigation">#}
    {#{{ knp_pagination_render(goods) }}#}
    {#</div>#}
{% endblock %}