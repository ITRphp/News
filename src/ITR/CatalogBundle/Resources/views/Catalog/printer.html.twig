{% extends "CatalogBundle:Catalog:layout.html.twig" %}

{% block goods %}
    <div class="col-md-10" id="goods_list">
        <div id="sort">
            <ul class="nav nav-pills">
                <li class="active"><a data-toggle="pill" id="date" name="date" class="sort btn btn-xs"{#href="{{path('sort_news',{'key': 'date'})}}"#}>{{'Sort by price'|trans}}</a></li>
                <li><a data-toggle="pill" id="popular" name="popular" class="sort btn btn-xs" {#href="{{path('sort_news',{'key': 'popular'})}}"#}>{{'Sort by popularity'|trans}}</a></li>
                <li><a data-toggle="pill" id="popular" name="popular" class="sort btn btn-xs" {#href="{{path('sort_news',{'key': 'popular'})}}"#}>{{'Sort by name'|trans}}</a></li>
            </ul>
        </div>
        {% for goods_item in goods %}
            <div class="media row">
                <a class="media-left col-md-2" href="#">
                    <img src="{{ goods_item.images[0].url }}" alt="..." width="100" height="100">
                </a>
                <div class="row col-md-10">
                    <div class="media-body col-md-8   " style="display: inline;">
                        <h4 class="media-heading">{{ goods_item.getGoodsId.name }}</h4>
                        {{ goods_item.getGoodsId.getDescription }}
                    </div>
                    <div class="col-md-2 text-danger" style="display: inline-block;">
                        <strong>{{ goods_item.getMinPrice }}$ - {{ goods_item.getMaxPrice }}$ </strong>
                        <div class="row" style="margin-left: 0px!important;">
                            <a href="#" class="btn btn-default btn-sm">All offers</a>
                        </div>
                    </div>
                    <div class="row col-md-offset-0  col-md-12">
                        {% if goods_item.rating is not empty %}
                        {% for i in 1..goods_item.getAvgRating %}
                            <span class=" text-danger glyphicon glyphicon-star"></span>
                        {% else %}
                        {% endfor %}
                            {% endif %}
                    </div>
                </div>
            </div>
            <hr>
        {% else %}
            <h3>No such goods</h3>
        {% endfor %}
    </div>
    <div class="navigation">
    {{ knp_pagination_render(goods) }}
    </div>
{% endblock %}