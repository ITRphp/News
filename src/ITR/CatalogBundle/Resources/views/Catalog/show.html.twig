{% extends "NewsBundle:MainPage:index.html.twig" %}
{% block content %}
    <div>
        <div class="navbar navbar-default navbar-static-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{path('mainpage')}}">{% trans %}Welcome %username%{% endtrans %}</a>
                </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    {{ knp_menu_render('NewsBundle:Builder:mainMenu', {'currentClass': 'active', 'template': 'NewsBundle:Menu:knp_menu.html.twig'})|raw }}
                </div>
            </div>
        </div>
        <h4> {{ "now"|date("d-m-Y") }}</h4>
        <hr>
    </div>
    <div class="row">
        <div class="container col-md-2">
            <div class="col-md-12 col-sm-2 container">
                <div data-spy="affix" class="sidebar visible-desktop"  data-offset-top="227" id="affix1">
                    {{ knp_menu_render('CatalogBundle:Builder:categoryMenu', {'currentClass': 'active', 'template': 'NewsBundle:Menu:knp_menu.html.twig'}) }}
                    <hr>
                </div>
            </div>
        </div>
    </div>
{% endblock %}