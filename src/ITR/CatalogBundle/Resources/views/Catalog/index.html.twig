{% extends "CatalogBundle:Catalog:layout.html.twig" %}

{% block goods %}
    <div class="col-md-10 row" id="goods_list">
        {% for image in images %}
            <div class="col-sm-6 col-md-3">
                <a href="" class="thumbnail">
                    <img src="{{ image.url }}" alt="..." width="100" height="100">
                    <div class="caption">
                        <h3>{{ image.getGoodsId.getName }}</h3>
                        <p><strong class="text-danger">{{ image.getGoodsId.getMinPrice }}$ - {{ image.getGoodsId.getMaxPrice }}$ </strong></p>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
    {#<div class="navigation">#}
    {#{{ knp_pagination_render(goods) }}#}
    {#</div>#}
{% endblock %}