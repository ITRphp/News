{% extends "NewsBundle:Admin:layout.html.twig" %}

{% block content %}
    {{parent()}}
    <h1>Printer list</h1>

    <table class="records_list table table-hover table-bordered">
        <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Scanner</th>
            <th>Fax</th>
            <th>Printtype</th>
            <th>Format</th>
            <th>Speed</th>
            <th>Weight</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('printer_show', { 'id': entity.id }) }}">{{ entity.name}}</a></td>
                <td>{{ entity.type }}</td>
                <td>{%  if entity.scanner == 1  %}
                        <span class="glyphicon glyphicon-ok text-success"></span>
                    {% else %}
                        <span class="glyphicon glyphicon-remove text-danger"></span>
                    {% endif %}</td>
                <td>{%  if entity.fax == 1  %}
                        <span class="glyphicon glyphicon-ok text-success"></span>
                    {% else %}
                        <span class="glyphicon glyphicon-remove text-danger"></span>
                    {% endif %}</td>
                <td>{{ entity.printType }}</td>
                <td>{{ entity.format }}</td>
                <td>{{ entity.speed }}</td>
                <td>{{ entity.weight }}</td>
                <td>
                    <a href="{{ path('printer_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-eye-open"></span></a>
                    <a href="{{ path('printer_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-edit"></span></a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(entities) }}
    </div>
{% endblock %}
