{% extends "NewsBundle:Admin:layout.html.twig" %}

{% form_theme edit_form 'NewsBundle:Form:fields.html.twig' %}
{% form_theme delete_form 'NewsBundle:Form:delete.html.twig' %}

{% block content -%}
    {{parent()}}
    <div class="row col-md-offset-1">
        <a href="{{ path('printer') }}"  class="btn btn-default">{% trans %}Back to the list{% endtrans %}</a>
        <p></p>
        {% if is_granted('ROLE_ADMIN') %}
            {{ form(delete_form,{'attr':{'onclick':' return confirm("Are you sure you want to delete this printer?")' }} ) }}
        {% endif %}
    </div>
    <h1 class="text-center">Printer edit </h1>
    <div class="row" >
        <div class="col-md-5 col-md-offset-4">
            {{ form(edit_form) }}
        </div>

        <p></p>
    <div class="row col-md-12 ">
        <div class="col-md-offset-1 col-md-7">
            {% for goods in entity.goodsId %}
                {% for image in goods.images %}
                    <div id="" class='col-md-2' style=display:inline>
                        <img class="img-thumbnail"  src="{{ image.url }}">
                        {#<a href="#" name=delete class=delete value="">Delete</a>#}
                    </div>
                {% else %}
                {% endfor %}
            {% endfor %}
        </div>
        <div class="col-md-5">
            <input type="button" class="active btn  btn-success" data-toggle="modal" data-target="#basicModal" value="Add Image"/>
        </div>
    </div>



    <div class="modal fade" id="basicModal" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header"><button class="close" type="button" data-dismiss="modal">x</button>
                    <h4 class="modal-title" id="myModalLabel">Upload your photo</h4>
                </div>

                <form method="POST" role="form" action="cloudinary.php" enctype="multipart/form-data">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="InputFile">Select photo</label>
                            <input type="file" id="InputFile" name="input_file">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-default">Upload</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
