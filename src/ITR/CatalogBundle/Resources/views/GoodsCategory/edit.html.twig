{% extends "NewsBundle:Admin:layout.html.twig" %}

{% form_theme edit_form 'NewsBundle:Form:fields.html.twig' %}
{% form_theme delete_form 'NewsBundle:Form:delete.html.twig' %}

{% block content -%}
    {{parent()}}
    <div class="row col-md-offset-1">
        <a href="{{ path('goodscategory') }}"  class="btn btn-default">{% trans %}Back to the list{% endtrans %}</a>
        <p></p>
        {% if is_granted('ROLE_ADMIN') %}
            {{ form(delete_form,{'attr':{'onclick':' return confirm("Are you sure you want to delete this category?")' }} ) }}
        {% endif %}
    </div>
    <h1 class="text-center">Goods Category edit</h1>
    <div class="row" >
        <div class="col-md-5 col-md-offset-4">
            {{ form(edit_form) }}
        </div>
    </div>
{% endblock %}

