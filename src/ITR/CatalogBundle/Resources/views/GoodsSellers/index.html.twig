{% extends "NewsBundle:Admin:layout.html.twig" %}

{% block content %}
    {{parent()}}
    <h1>GoodsSellers list</h1>

    <table class="records_list table table-hover table-bordered">
        <thead>
        <tr>
            <th>Category</th>
            <th>Goods</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.getGoodsId.getGoodsCategory }}</td>
                <td><a href="{{ path('goodssellers_show', { 'id': entity.id }) }}">{{ entity.getGoodsId }}</a></td>
                <td>{{ entity.price }} $ </td>
                <td>{{ entity.quantity }}</td>
                <td>
                    <a href="{{ path('goodssellers_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-eye-open"></span></a>
                    <a href="{{ path('goodssellers_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-edit"></span></a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(entities) }}
    </div>

{% endblock %}
