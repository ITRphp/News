{% extends "NewsBundle:Admin:layout.html.twig" %}

{% form_theme delete_form 'NewsBundle:Form:delete.html.twig' %}

{% block content -%}
    {{parent()}}
    <h1>Seller</h1>
    <div class="btn-toolbar" role="toolbar">
        <div class="btn-group">
            <a href="{{ path('admin_seller') }}" class="btn btn-default">{% trans %}Back to the list{% endtrans %}</a>
            <a href="{{ path('admin_seller_edit', { 'id': entity.id }) }}" class="btn btn-default">{% trans %}Edit{% endtrans %}</a>
        </div>
    </div>

    <table class="records_list table table-hover table-bordered">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ entity.address }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Skype</th>
                <td>{{ entity.skype }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{% for phone in entity.phone %}
                        <span class="text-center">{{ phone }}</span>
                    {% else %}
                    {% endfor %}</td>
            </tr>
            <tr>
                <th>Schedule</th>
                <td>{{ entity.schedule }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>
    {% if is_granted('ROLE_ADMIN') %}
        {{ form(delete_form) }}
    {% endif %}
{% endblock %}
